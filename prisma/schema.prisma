generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  email String @unique
  password String
  name String?
  files File[]
  folders Folder[]
}

model Folder {
  id Int @id @default(autoincrement())
  name String 
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields:[userId], references: [id])
  files File[] 
}

model File {
  id Int @id @default(autoincrement())
  originalName String 
  storedName String?
  size Int
  mimetype String
  createdAt DateTime @default(now())
  userId Int
  folderId Int
  
  user User @relation(fields: [userId], references: [id])
  folder Folder? @relation(fields: [folderId], references: [id], onDelete: Cascade)

}
